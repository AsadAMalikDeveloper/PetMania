<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.doctorapp.DoctorProfileFragment">


    <RelativeLayout
        android:id="@+id/nameLayout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <FrameLayout
            android:id="@+id/userImg_account"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/doctors" />

            />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/userImg_account"
            android:layout_toRightOf="@id/userImg_account">

            <TextView
                android:id="@+id/doctor_name_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/arkhip_font"
                android:gravity="center"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_name_account"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:text="@string/messageWithLink"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView

        android:id="@+id/edit_scollViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nameLayout_account"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/closeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/closeLayout"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_margin="5dp"
                android:text="Basic Information"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/userImg_account1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/basic"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePic1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/placeholder" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/ic_add_a_photo_black_24dp"

                    />
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userName_account_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/userImg_account1">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/doctor_account_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arkhip_font"
                    android:hint="Enter your Name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/about_layout_dr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userImg_account1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:counterEnabled="true"
                app:counterMaxLength="100">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dr_speciality"
                    android:layout_margin="5dp"
                    android:hint="Your Speciality"
                    android:maxLength="140"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/about_layout_dr"
                android:background="@android:color/darker_gray"
                android:backgroundTint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_margin="5dp"
                android:text="Contact Information"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center_vertical"
                android:padding="16dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_countryPreference="us,pk" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_text_phone_dr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:hint="phone"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true" />

                <ImageButton
                    android:id="@+id/phone_pastePin"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-60dp"
                    android:backgroundTint="@android:color/black"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:text="this is the phone number for buyers contact and other notifications"
                android:textSize="16sp" />

            <LinearLayout

                android:id="@+id/email_account_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_txt"

                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/email_account_et_dr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Email"
                    android:paddingRight="60dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/email_pastePin"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-60dp"
                    android:backgroundTint="@android:color/black"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/black" />
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_account_et_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_account_et_layout"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorAccent">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password_et_dr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_below="@id/password_account_et_layout"
                android:id="@+id/save_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="#00000000"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:elevation="5dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>